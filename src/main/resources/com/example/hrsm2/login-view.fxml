<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="notificationPane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.hrsm2.gui.LoginGUI">
    <BorderPane>
        <center>
            <VBox alignment="CENTER" spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
                
                <Label text="HR Management System" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label text="Login" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
                <GridPane hgap="10" vgap="10" alignment="CENTER">
                    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="usernameField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    
                    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <PasswordField fx:id="passwordField" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </GridPane>
                
                <Button fx:id="loginButton" text="Login" onAction="#handleLogin" prefWidth="100"/>
            </VBox>
        </center>
    </BorderPane>
</StackPane> 